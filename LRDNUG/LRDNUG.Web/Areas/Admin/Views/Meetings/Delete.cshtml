@model LRDNUG.Web.Models.Meeting

@{
    ViewBag.Title = "Delete Meeting";
}


<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Delete @Model.MonthYear Meeting</legend>

   <dl class="dl-horizontal">
        <dt>Title</dt>
        <dd>@Model.PresentationTitle </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>SpeakerName</dt>
        <dd>@Model.SpeakerName</dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>SpeakerBio</dt>
        <dd>@Model.SpeakerBio</dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>Description</dt>
        <dd>@Model.Description</dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>Date</dt>
        <dd>@String.Format("{0:g}", Model.Date)</dd>
    </dl>

   <dl class="dl-horizontal">
        <dt>MonthYear</dt>
        <dd>@Model.MonthYear</dd>
    </dl>
    
</fieldset>
@using (Html.BeginForm())
{
    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-primary" />
        @Html.ActionLink("Back to List", "Index", null, null, new { @class = "btn" })
    </div>
}


