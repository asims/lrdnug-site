@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
    @RenderSection("head", required: false)

    @* favicons and touch icons go here *@
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/" title="LRDNUG">LRDNUG</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        @Html.Navigation()
                        <li>@Html.ActionLink("Past Meetings", "PastMeetings", "Meeting")</li>
                        <li>@Html.ActionLink("Our Sponsors", "Index", "Sponsor")</li>
                        <li><a href="http://eepurl.com/e7XmE" title="Subscribe to our email">Subscribe to our email</a></li>
                        <li><a href="http://www.facebook.com/lrdnug" title="Facebook">Facebook</a></li>
                        <li><a href="http://www.twitter.com/lrdnug" title="Twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
        @RenderBody()
        <hr>
        <footer>
            <p>&copy; Little Rock .NET User Group @System.DateTime.Now.ToString("yyyy")</p>
            @Html.Partial("_LoginPartial")
        </footer>
    </div>
    @Scripts.Render("~/js")

    @RenderSection("Scripts", required: false)
    @Html.Partial("_html5shiv")
</body>
</html>

