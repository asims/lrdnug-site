@model LRDNUG.Web.Models.Meeting

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Meeting</legend>

    <div class="display-label">PresentationTitle</div>
    <div class="display-field">@Model.PresentationTitle</div>

    <div class="display-label">SpeakerName</div>
    <div class="display-field">@Model.SpeakerName</div>

    <div class="display-label">SpeakerBio</div>
    <div class="display-field">@Model.SpeakerBio</div>

    <div class="display-label">SpeakerTwitter</div>
    <div class="display-field">@Model.SpeakerTwitter</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>

    <div class="display-label">StartTime</div>
    <div class="display-field">@Model.StartTime</div>

    <div class="display-label">MonthYear</div>
    <div class="display-field">@Model.MonthYear</div>

    <div class="display-label">Location</div>
    <div class="display-field">@(Model.Location == null ? "None" : Model.Location.Name)</div>

    <div class="display-label">SurveyURL</div>
    <div class="display-field">@Model.SurveyURL</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


